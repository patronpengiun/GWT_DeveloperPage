<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:style>
    .table-style {
      border: 1px solid black;
      margin-left:60px;
      margin-bottom:40px;
    }
    </ui:style>
	
	<g:HTMLPanel>
	
	<b:Hero>
    <b:Heading ui:field="headUpd" size="2">Game Update</b:Heading>
    <b:Paragraph ui:field="subheadUpd">Please submit your game update info below.</b:Paragraph>
	</b:Hero>
	
	<g:FlexTable ui:field="table" styleName="{style.table-style}" borderWidth="2" />
 

    <b:Paragraph ui:field="noGameWarning"></b:Paragraph>
	
	<b:Form ui:field="form" type="HORIZONTAL">
    <b:Fieldset>
    <b:ControlGroup>
      <b:ControlLabel ui:field="gameName" for="input01">Game Name</b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" b:id="gameName" ui:field="name"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
    <b:ControlGroup>
      <b:ControlLabel ui:field="playerNum" for="select01">Player Number</b:ControlLabel>
      <b:Controls>
      		<b:ListBox b:id="playerNum" ui:field="number">
									<g:item>2</g:item>
									<g:item>3</g:item>
									<g:item>4</g:item>
									<g:item>5</g:item>
								</b:ListBox>
			</b:Controls>
	  </b:ControlGroup>
	  
	  <b:ControlGroup>
			<b:ControlLabel ui:field="turnBased" for="select02">is Turn Based</b:ControlLabel>
      <b:Controls>
      		<b:ListBox b:id="isTurnBased" ui:field="turnBase">
									<g:item>Yes</g:item>
									<g:item>No</g:item>
								</b:ListBox>
			</b:Controls>
		</b:ControlGroup>	
		
		<b:ControlGroup>
      <b:ControlLabel ui:field="gameURL" for="input02">Game URL</b:ControlLabel>
      <b:Controls>
        	<b:TextBox alternateSize="XLARGE" b:id="gameUrl" ui:field="gameurl"></b:TextBox>
      </b:Controls>
	  </b:ControlGroup>
		
	<b:ControlGroup>
			<b:ControlLabel ui:field="ifAI" for="select03">Has AI</b:ControlLabel>
     		<b:Controls>
      		<b:ListBox b:id="hasAI" ui:field="AI">
									<g:item>Yes</g:item>
									<g:item>No</g:item>
								</b:ListBox>
			</b:Controls>
		</b:ControlGroup>	
		
		<b:ControlGroup>
				<b:ControlLabel ui:field="pic" for="fileInput">Upload Screenshot</b:ControlLabel>
						<b:Controls>
							<b:FileUpload b:id="screenShot"></b:FileUpload>
    				</b:Controls>
		</b:ControlGroup>
						
						
		
		<b:ControlGroup>
			<b:ControlLabel ui:field="gameDetail" for="input06">Game Description</b:ControlLabel>
			<b:Controls>
      		<b:TextArea b:id="textarea" visibleLines="6" ui:field="description"></b:TextArea> 
			</b:Controls>	
    </b:ControlGroup>
    
    <b:ControlGroup>
			<b:Controls>
				<b:Paragraph>
      		<b:Button ui:field="updateBtn" type="PRIMARY" >Update</b:Button>     		
      		<b:Button ui:field="backBtn" type="PRIMARY" > Back </b:Button>   
      	</b:Paragraph>
			</b:Controls>	
    </b:ControlGroup>
    
    
    
  </b:Fieldset>
	</b:Form>

	
	</g:HTMLPanel>
</ui:UiBinder> 