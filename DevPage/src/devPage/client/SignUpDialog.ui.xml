<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:style>
	    .create-btn {margin-right:30px;}
  	</ui:style>
  	
	<b:Modal ui:field="signUpModal" title="Sign Up" backdrop="STATIC">
	     <b:Form type="HORIZONTAL">
  <b:Fieldset>
    <b:ControlGroup>
      <b:ControlLabel for="email">Email <b>*</b></b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" ui:field="email"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
    <b:ControlGroup>
      <b:ControlLabel for="password">Password <b>*</b></b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:PasswordTextBox alternateSize="XLARGE" ui:field="password"></b:PasswordTextBox>
      </b:Controls>
    </b:ControlGroup>
	  
	  <b:ControlGroup>
      <b:ControlLabel for="fname">Fisrt Name</b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" ui:field="fname"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
     <b:ControlGroup>
      <b:ControlLabel for="mname">Middle Name</b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" ui:field="mname"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
     <b:ControlGroup>
      <b:ControlLabel for="lname">Last Name</b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" ui:field="lname"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
     <b:ControlGroup>
      <b:ControlLabel for="nickname">Nick Name</b:ControlLabel>
      <b:Controls>
        <!-- If you add id attribute to element,You should use b:id attribute. -->
        	<b:TextBox alternateSize="XLARGE" ui:field="nickname"></b:TextBox>
      </b:Controls>
    </b:ControlGroup>
    
    
    <b:ControlGroup>
			<b:Controls>
				<b:Paragraph>
      		<b:Button ui:field="createBtn" type="PRIMARY" addStyleNames="{style.create-btn}">Creat</b:Button>   		
      		<b:Button ui:field="backBtn" type="PRIMARY" > Back </b:Button>   
      	</b:Paragraph>
			</b:Controls>	
    </b:ControlGroup>
    
    
    
  </b:Fieldset>
	</b:Form>
	 </b:Modal>
</ui:UiBinder>